.blog
  max-width r(372)
  mb(97)
  &__image
    mb(18)
    img
      width 100%
  &__date
    color $wt75
    font-family $s-font, serif
    font-style italic
    position relative
    display inline-block
    font-size: e(12)
    mb(46)
    &:after
      ba()
      width: r(192)
      height: r(1)
      bg($wt)
      right -14rem
      top 50%
  h2
    mb(29)
  p
    color: $wt50

.blog-row
  justify-content space-between
  flex-direction column
  max-height: 170vw;
  +xs()
    flex-direction row
    max-height 100%
  .blog-item
    +mmin(568px)
      &:nth-child(even)
        order 2
      &:nth-child(odd)
        order 1
      &:nth-child(2)
        mt(150)