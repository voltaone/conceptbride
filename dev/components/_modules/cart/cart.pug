mixin cart-bucket()
    .cart.cart-bucket
        a(href='' title='').cart__delete
            include ../../_svgs/delete-01.svg
        .cart__back
            +img('img/illus/entry/entry1.png')
        .cart__front
            h2
                a(href='' title='').cart__front__link.link-overline
                    | WJ 17612
            .cart__front_designer Designer:
            +link-line-italic('Victoria Jane Iris')
            .cart__front_double
                .cart__front_size Размер:
                    span.cart__front_size-s S
                h4 86 000 грн
