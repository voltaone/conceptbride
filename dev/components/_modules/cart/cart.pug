mixin cart-product-right()
    .animation-view
        .cart.cart-product.cart-product-right.wow.rellax(data-rellax-speed='.7')
            .cart__back
                +img('img/illus/entry/entry1.png')
            .cart__front
                .cart__front_designer Designer:
                +link-line-italic('Victoria Jane Iris')
                h2 WJ 17612
                h4 86 000 грн
                +link-overline('Посмотреть')
        .animation-view__wrapper.wow

