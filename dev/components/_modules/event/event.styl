.event
  border-bottom 1px solid rgba(255,255,255,.2)
  pb(66)
  pt(93)
  display flex
  +xs()
    flex-wrap wrap
  &__left
    max-width r(200)
    flex 0 0 r(200)
    +xs()
      max-width 100%
      flex 0 0 100%
      padding-left 50%
      mb(50)

  .blog__date
    mb(0)
    &:after
      trans()
      right auto
      left -(r(210))
      width r(153)
      +xs()
        width r(112)
        left -45vw
  .event_time
    co($wt)
    font-size: e(42)
    font-weight: bold;
    line-height: 1.62;
    letter-spacing: r(1.3)
    font-family $s-font, sans-serif
  .btn
    max-width r(270)
    +xs()
      max-width 100%
  .btn-pair
    +xs()
      justify-content center

  &.active
    .blog__date
      &:after
        left 0

