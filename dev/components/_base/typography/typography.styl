
::selection
  bg($dark)
  co($ocean)

h1, h2, h3, h4, h5, h6, p, ul li, ol li, blockquote, cite
  font-family $m-font, sans-serif
  co($wt)

h1
  font(e(42), 700, e(22))
  mb(35)
  font-family $s-font, serif
  letter-spacing: r(1.3)
  +mob()
    letter-spacing r(0.8)
    fs(28)

h2
  font(e(18), 700, 1.22)
  letter-spacing: r(0.9)
  mb(33)

.h2-nav
  fw(600)
  mb(15)
  mt(9)

h3
  font(e(18), 400, e(22))
  //mb(32)
  letter-spacing: r(0.9)

h4
  font(e(15.5), 400, e(22))
  //mb(38)
  letter-spacing: r(0.8)

h5
  font(e(14), 400, 7.29)
  //mb(44)

  font-family $s-font, sans-serif
  font-style: italic;
  letter-spacing: r(0.4)

h6
  font(e(12), 400, e(22))
  //mb(50)

  font-family $s-font, sans-serif
  font-style: italic;
  letter-spacing: r(0.4)

.h7
  font(e(12), 400, e(22))
  letter-spacing: r(0.6)
  co($wt50)
  mb(45)

.h8
  font(e(10), 600, e(22))
  letter-spacing: r(1.5)
  co($wt)

.h9
  font(e(8), 600, 2.75)
  letter-spacing: r(1.2)
  co($wt)

.h10
  font(e(8), 600, e(22))
  letter-spacing: r(2.4)
  co($wt)

p
  font(e(15.5), 400, e(22))
  mb(16)
  letter-spacing: r(0.8)

hr
  border: 0;
  height: r(1)
  bg($bk)
  margin r(15) 0

.text-gradient
  //background-image: linear-gradient(to right, #bfa39f, #dcc3bf), linear-gradient(#ffffff, #ffffff);
  font-family $s-font, serif
  font-size: e(42)
  font-weight: 700
  line-height: 1.62;
  letter-spacing: r(1.9)
  //background-clip: text;
  //-webkit-background-clip: text;
  //-webkit-text-fill-color: transparent;
  mb(28)

  color #c0a4a0

  +mob()
    fs(28)

.color-brown
  color $brown !important

.mb-100
  mb(100)

